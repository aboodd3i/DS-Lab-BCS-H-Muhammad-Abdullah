#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    Node* child;
    Node(int d) {
        data = d;
        next = NULL;
        child = NULL;
    }
};

Node* flatten(Node* head) {
    if (!head) return NULL;
    Node* curr = head;
    while (curr) {
        if (curr->child) {
            Node* nextNode = curr->next;
            curr->next = curr->child;
            curr->child = NULL;
            Node* temp = curr->next;
            while (temp->next) temp = temp->next;
            temp->next = nextNode;
        }
        curr = curr->next;
    }
    return head;
}

void printList(Node* head) {
    while (head) {
        cout << head->data;
        if (head->next) cout << " -> ";
        head = head->next;
    }
    cout << endl;
}

int main() {
    Node* head = new Node(1);
    head->next = new Node(2);
    head->next->next = new Node(3);

    head->next->child = new Node(4);
    head->next->child->next = new Node(5);

    cout << "Flattened List: ";
    head = flatten(head);
    printList(head);
}
